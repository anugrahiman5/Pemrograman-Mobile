<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExplicitActivity">

    <EditText
        android:id="@+id/edit"
        android:hint="Masukkan teks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_activity"
        android:layout_marginRight="@dimen/horizontal_activity"
        android:layout_marginTop="@dimen/vertical_activity"
        />


    <Button
        android:id="@+id/btn_move_eksplisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_activity"
        android:layout_marginRight="@dimen/horizontal_activity"
        android:layout_marginTop="@dimen/vertical_activity"
        android:text="Pindah Halaman"
        />


</LinearLayout>